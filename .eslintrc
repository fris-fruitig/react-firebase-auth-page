{
  "extends": [
    "airbnb",
    "plugin:flowtype/recommended",
    "plugin:react/recommended",
    "prettier",
    "prettier/flowtype",
    "prettier/react"
  ],
  "plugins": [
    "flowtype",
    "react",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "jest": true
  },
  "rules": {
    "react/no-array-index-key": 0,
    "import/no-named-default": 0,
    "react/require-default-props": 0,
    "react/jsx-boolean-value": 0,
    "react/prefer-stateless-function": 0,
    "react/sort-comp": 0,
    "react/no-danger": 0,
    "global-require": 0,
    "consistent-return": 0,
    "prettier/prettier": [
      "error",
      {
        "useTabs": false,
        "printWidth": 80,
        "tabWidth": 2,
        "trailingComma": "none",
        "singleQuote": true,
        "bracketSpacing": true,
        "jsxBracketSameLine": false,
        "parser": "flow",
        "semi": true
      }
    ]
  }
}